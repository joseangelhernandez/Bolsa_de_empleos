@model Capa_Presentacion.Models.Solicitudes

<!DOCTYPE html>

<html>
<body>

    @using (Html.BeginForm("Solicitar", "ModulosSolicitante", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Enviar Curriculum Vitae</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label for="validationCustom02">Nombre</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control", @Value = ViewData["nombre"] } })
                    @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label for="validationCustom02">Subir Curriculum Vitae (Solo Documentos PDF)</label>
                <div class="col-md-10">
                    <div class="custom-file">
                        <input type="file" name="PDF" class="custom-file-input" id="inputGroupFile02" lang="en" accept=".pdf">
                        <label class="custom-file-label" for="inputGroupFile02">Escoger el archivo PDF</label>
                    </div>

                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input class="btn btn-primary" type="submit" value="Enviar solicitud de trabajo" />
                </div>
            </div>
        </div>
    }


    <script type="application/javascript">
        $('inputGroupFile02').change(function(e){
            var fileName = e.target.files[0].name;
            $('.custom-file-label').html(fileName);
        });
    </script>


</body>
</html>
